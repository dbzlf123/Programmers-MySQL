MySQL

SELECT a.AUTHOR_ID, b.AUTHOR_NAME, a.CATEGORY, SUM(c.SALES * a.PRICE) TOTAL_SALES
FROM BOOK a JOIN AUTHOR b ON a.AUTHOR_ID = b.AUTHOR_ID JOIN BOOK_SALES c ON a.BOOK_ID = c.BOOK_ID
WHERE YEAR(c.SALES_DATE) = 2022 and MONTH(c.SALES_DATE) = 1
GROUP BY AUTHOR_ID, CATEGORY
ORDER BY a.AUTHOR_ID, a.CATEGORY DESC

Oracle

SELECT a.AUTHOR_ID, b.AUTHOR_NAME, a.CATEGORY, SUM(c.SALES * a.PRICE) TOTAL_SALES
FROM BOOK a JOIN AUTHOR b ON a.AUTHOR_ID = b.AUTHOR_ID JOIN BOOK_SALES c ON a.BOOK_ID = c.BOOK_ID
WHERE extract (year from c.SALES_DATE) = 2022 and extract(month from c.SALES_DATE) = 1
GROUP BY a.AUTHOR_ID, a.CATEGORY, b.AUTHOR_NAME
ORDER BY a.AUTHOR_ID, a.CATEGORY DESC
